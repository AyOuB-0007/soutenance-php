<script>
// BOUTON FLOTTANT ET MODALE R√âSERVATION
document.addEventListener('DOMContentLoaded', function() {
    const floatingBtn = document.getElementById('floatingReservationBtn');
    const modal = document.getElementById('publicReservationModal');
    
    // D√©finir date et heure par d√©faut
    const now = new Date();
    const tomorrow = new Date(now);
    tomorrow.setDate(tomorrow.getDate() + 1);
    
    const defaultDate = tomorrow.toISOString().split('T')[0];
    const defaultTime = '19:00'; // 19h par d√©faut
    
    document.getElementById('publicDate').value = defaultDate;
    document.getElementById('publicTime').value = defaultTime;
    
    // Ouvrir la modale au clic sur le bouton flottant
    floatingBtn.addEventListener('click', function() {
        modal.classList.add('active');
        document.body.style.overflow = 'hidden';
    });
    
    // Fermer la modale en cliquant sur l'overlay
    modal.addEventListener('click', function(e) {
        if (e.target === modal) {
            closePublicReservationModal();
        }
    });
});

function closePublicReservationModal() {
    const modal = document.getElementById('publicReservationModal');
    modal.classList.remove('active');
    document.body.style.overflow = '';
}

function submitPublicReservation() {
    const clientName = document.getElementById('publicClientName').value;
    const phone = document.getElementById('publicPhone').value;
    const date = document.getElementById('publicDate').value;
    const time = document.getElementById('publicTime').value;
    const persons = document.getElementById('publicPersons').value;
    const notes = document.getElementById('publicNotes').value;
    
    // Validation simple
    if (!clientName.trim()) {
        alert('Veuillez saisir votre nom complet');
        document.getElementById('publicClientName').focus();
        return;
    }
    
    if (!phone.trim()) {
        alert('Veuillez saisir votre num√©ro de t√©l√©phone');
        document.getElementById('publicPhone').focus();
        return;
    }
    
    if (!date) {
        alert('Veuillez s√©lectionner une date');
        document.getElementById('publicDate').focus();
        return;
    }
    
    if (!time) {
        alert('Veuillez s√©lectionner une heure');
        document.getElementById('publicTime').focus();
        return;
    }
    
    if (!persons) {
        alert('Veuillez indiquer le nombre de personnes');
        document.getElementById('publicPersons').focus();
        return;
    }
    
    // Cr√©er un formulaire pour envoyer la r√©servation
    const form = document.createElement('form');
    form.method = 'POST';
    form.action = '/reservation-publique';
    form.style.display = 'none';
    
    const inputs = [
        { name: 'client_name', value: clientName },
        { name: 'phone', value: phone },
        { name: 'date', value: date },
        { name: 'time', value: time },
        { name: 'persons', value: persons },
        { name: 'notes', value: notes }
    ];
    
    inputs.forEach(inputData => {
        const input = document.createElement('input');
        input.type = 'hidden';
        input.name = inputData.name;
        input.value = inputData.value;
        form.appendChild(input);
    });
    
    document.body.appendChild(form);
    
    // Fermer la modale
    closePublicReservationModal();
    
    // Soumettre le formulaire
    form.submit();
}
</script>

